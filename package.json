{
  "name": "fullstack-ecommerce-oms",
  "version": "1.0.0",
  "description": "Full Stack E-commerce Platform with Laravel Backend and React Frontend",
  "scripts": {
    "server": "cd backend && php artisan serve --port=8000",
    "client": "cross-env BROWSER=none npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run build --prefix frontend",
    "install-all": "npm install && cd frontend && npm install",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report"
  },
  "keywords": [
    "ecommerce",
    "oms",
    "commission",
    "api",
    "laravel",
    "react",
    "fullstack"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  }
}