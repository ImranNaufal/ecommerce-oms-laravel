# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (Update with your MySQL credentials)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=ecommerce_oms
DB_PORT=3306

# JWT Secret (CRITICAL: Change this in production!)
# Generate a random 64-character string for production, e.g., from https://randomkeygen.com/
JWT_SECRET=a_very_long_and_super_secret_string_for_development_only
JWT_EXPIRE=7d

# Frontend URL
CLIENT_URL=http://localhost:3000

# Optional: Marketplace API Keys (for external integration)
SHOPEE_PARTNER_ID=
SHOPEE_PARTNER_KEY=
LAZADA_APP_KEY=
LAZADA_APP_SECRET=
TIKTOK_APP_KEY=
TIKTOK_APP_SECRET=

# Optional: Webhook Security
# A shared secret used to verify the authenticity of incoming webhooks.
WEBHOOK_SECRET=your_webhook_secret_here

# Optional: Email Notifications (for sending alerts, etc.)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_password